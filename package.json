{
  "name": "dtc-webhook",
  "version": "1.0.0",
  "description": "DTC WhatsApp Cloud API Webhook for Netlify",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'Functions-only deployment, no build needed'",
    "deploy": "netlify deploy --prod",
    "test": "jest -c config/jest.config.js",
    "test:watch": "jest -c config/jest.config.js --watch",
    "test:coverage": "jest -c config/jest.config.js --coverage",
    "lint": "eslint -c config/.eslintrc.js 'netlify/functions/**/*.ts'",
    "format": "prettier --config config/.prettierrc --write 'netlify/functions/**/*.ts' 'tests/**/*.ts'"
  },
  "dependencies": {
    "@netlify/functions": "^2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "netlify-cli": "^21.6.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
